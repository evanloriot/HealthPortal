@model HealthPortal.Models.EditMedicalHistoryViewModel

@{
    ViewBag.Title = "Edit Medical History.";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditMedicalHistory", "MedicalHistory", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Details:</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="form-group">
        @Html.LabelFor(m => m.Details, new { @class = "col-md-3 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Details, new { @class = "form-control", @Style = "width:100%" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit detail" class="btn btn-default" />
        </div>
    </div>
}
@Html.ActionLink("Back", "Index")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
