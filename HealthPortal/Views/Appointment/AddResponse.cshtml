    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit response" class="btn btn-default" />
            </div>
        </div>
    }
}
@Html.ActionLink("Return to appointment home", "Index")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}