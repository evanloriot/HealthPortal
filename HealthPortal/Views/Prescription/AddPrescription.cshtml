@model HealthPortal.Models.AddPrescriptionViewModel

@{
    ViewBag.Title = "Add Prescription Name Page";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddPrescription", "Prescription", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add a prescription</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.PrescriptionName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PrescriptionName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Prescription Type", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.PrescriptionTypeID, new SelectList(@Model.Types, "PrescriptionTypeID", "Type"))
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

<br />
<br />

@Html.ActionLink("Back", "Index")