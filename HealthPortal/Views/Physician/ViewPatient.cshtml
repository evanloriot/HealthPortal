@model HealthPortal.Models.ViewPatientViewModel

@{
    ViewBag.Title = "Patient Information.";
}

<h2>@ViewBag.Title</h2>
<h4>Details:</h4>
<h5>General:</h5>
<ul>
    <li>Full Name: @Model.Patient.Identifier.FullName</li>
    <li>Email: @Model.Patient.Email</li>
    <li>Primary Phone Number: @Model.Patient.Identifier.Phone</li>
    <li>Emergency Phone Number: @Model.Patient.Identifier.EmergencyPhone</li>
    <li>Address: @Model.Patient.Identifier.Address</li>
    <li>Date of Birth: @Model.Patient.Identifier.DOB.ToShortDateString()</li>
    <li>Gender: @Model.Patient.Identifier.Gender</li>
</ul>
<h5>Diagnoses</h5>
<ul>
    @foreach(var item in Model.Diagnoses)
    {
        <li>@item.DiagnosisName</li>
    }
</ul>
<h5>Medical History:</h5>
<ul>
    @foreach (var item in Model.MedicalHistory)
    {
        <li>@item.Details</li>
    }
</ul>
<h5>Prescriptions:</h5>
<ul>
    @foreach (var item in Model.Prescriptions)
    {
        <li>@item.PrescriptionName - @item.Type.Type</li>
    }
</ul>
@Html.ActionLink("Back", "Index")